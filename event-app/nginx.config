events {
    worker_connections 1024;
}

http {
    server {
        listen 80;

        # Proxying for /events
        location /events/ {
            proxy_pass http://gateway:80/events/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cookie_flags ~*^.*$ samesite=lax;
        }

        # Proxying for /user
        location /user/ {
            proxy_pass http://gateway:80/user/; # Replace with your gateway's ClusterIP service and port
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cookie_flags ~*^.*$ samesite=lax;
        }

        # Proxying for /friends
        location /friends/ {
            proxy_pass http://gateway:80/friends/; # Replace with your gateway's ClusterIP service and port
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cookie_flags ~*^.*$ samesite=lax;
        }

        # Serving the React application
        location / {
            root /usr/share/nginx/html;
            index index.html;
            try_files $uri $uri/ /index.html;
        }
    }
}
